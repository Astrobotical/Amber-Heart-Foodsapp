<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authenticator.auth_login">

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:textColor="#252424"
        android:textSize="33sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/SID"
        android:layout_width="358dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/rounded"
        android:backgroundTint="#6A87FF"
        android:drawableLeft="@drawable/logintexticon_foreground"
        android:ems="10"
        android:hint="Enter your SID"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#FFFDFD"
        android:textColorHint="#FAFAFA"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/PasswordL"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="200dp"
        android:background="@drawable/rounded"
        android:drawableLeft="@drawable/passcon_foreground"
        android:elevation="2dp"
        android:ems="10"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#FFFEFE"
        android:textColorHint="#FBFBFB"
        android:textSize="24sp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="270dp"
        android:text="Remember me"
        android:textColor="#000000"
        android:textSize="19sp" />

    <Button
        android:id="@+id/Loginbtn"
        android:layout_width="278dp"
        android:layout_height="66dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/loginreg"
        android:backgroundTint="#0AAFF8"
        android:drawableLeft="@drawable/logincon_foreground"
        android:paddingLeft="80dp"
        android:paddingTop="12dp"
        android:paddingRight="80dp"
        android:paddingBottom="12dp"
        android:text="Login"
        android:textSize="24sp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="430dp" />
</RelativeLayout>