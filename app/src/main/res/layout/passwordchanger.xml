<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth"
    tools:context=".Authenticator.passwordchanger">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#46463e"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:layout_marginBottom="40sp"
            android:text="Password Changer"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Textinputlayout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"

            android:layout_marginBottom="46dp"
            android:focusableInTouchMode="true"
            android:hint="Please enter your new password"
            app:endIconTint="@color/teal_700"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10sp"
                android:baselineAligned="false"
                android:inputType="textPassword"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Textinputlayoutd"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"

            android:layout_marginBottom="48dp"
            android:focusableInTouchMode="true"
            android:hint="Confirm password"
            app:endIconTint="@color/teal_700"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10sp"
                android:inputType="textPassword"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:id="@+id/onsubmit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:text="Change password"
            android:textColor="@color/white"
            android:textColorHint="#EDEDED"
            android:textSize="20sp"
            app:iconTint="#E8E8E8"
            app:rippleColor="#00D7C3"
            app:strokeColor="#00D7C3"
            app:strokeWidth="2sp" />
    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>