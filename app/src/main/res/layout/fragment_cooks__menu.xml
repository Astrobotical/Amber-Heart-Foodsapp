<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.pages.cooks_Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categorial Options"
            android:textAlignment="center"
            android:textSize="20sp" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="5dp"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="389dp"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="178dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="230dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/idk"
                        android:scaleType="centerCrop"
                        android:src="@drawable/countericonlight"
                        tools:src="@drawable/countericonlight" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="183dp"
                    android:layout_height="216dp"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="450dp"
                    android:layout_marginBottom="23dp"
                    android:contentDescription="@string/idk">

                    <ImageButton
                        android:id="@+id/additem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/idk"
                        android:scaleType="center"
                        android:src="@drawable/menuadd1"
                        tools:src="@drawable/menuadd1" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/idk">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/idk"
                        android:src="@drawable/invoice2"
                        tools:src="@drawable/invoice2" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="175dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="230dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/idk"
                        android:src="@drawable/qrcodespng"
                        tools:src="@drawable/qrcodespng" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="214dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="450dp"
                    android:contentDescription="@string/idk">

                    <ImageButton
                        android:id="@+id/Edititems"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/idk"
                        android:src="@drawable/editiconlight"
                        tools:src="@drawable/editiconlight" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="175dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#00D7C3"
                    app:cardCornerRadius="5dp">

                    <ImageButton
                        android:id="@+id/MenuCreate_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="idk"
                        android:scaleType="center"
                        android:src="@drawable/menu_creator_iconfinalv2"
                        tools:src="@drawable/menu_creator_iconfinalv2" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>