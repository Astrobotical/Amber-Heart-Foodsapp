<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".studentviews.Products">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#46463e">

        <androidx.cardview.widget.CardView
            android:id="@+id/MainOuterContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#46463e"
            android:elevation="5dp"
            app:cardCornerRadius="5dp"
            tools:layout_editor_absoluteX="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#46463e">

                <androidx.cardview.widget.CardView
                    android:id="@+id/HeaderContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#0AFEEF">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFC53A">

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.Material3.Button.IconButton.Outlined"
                            android:id="@+id/Breakfast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="10sp"
                            android:text="Breakfast"
                            android:textColorHint="#EDEDED"
                            android:textSize="20sp"
                            app:iconTint="#E8E8E8"
                            app:rippleColor="#00D7C3"
                            app:strokeColor="#00D7C3"
                            app:strokeWidth="2sp"
                            />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.Material3.Button.IconButton.Outlined"
                            android:id="@+id/dinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="308dp"
                            android:layout_marginTop="10sp"
                            android:text="Dinner"
                            android:textColorHint="#EDEDED"
                            android:textSize="20sp"
                            app:iconTint="#E8E8E8"
                            app:rippleColor="#00D7C3"
                            app:strokeColor="#00D7C3"
                            app:strokeWidth="2sp"/>

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.Material3.Button.IconButton.Outlined"
                            android:id="@+id/lunch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="209dp"
                            android:layout_marginTop="10sp"
                            android:text="Lunch"
                            android:textColorHint="#EDEDED"
                            android:textSize="20sp"
                            app:iconTint="#E8E8E8"
                            app:rippleColor="#00D7C3"
                            app:strokeColor="#00D7C3"
                            app:strokeWidth="2sp"/>

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.Material3.Button.IconButton.Outlined"
                            android:id="@+id/all"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8sp"
                            android:layout_marginTop="10sp"
                            android:text="All"
                            android:textColorHint="#EDEDED"
                            android:textSize="20sp"
                            app:iconTint="#E8E8E8"
                            app:rippleColor="#00D7C3"
                            app:strokeColor="#00D7C3"
                            app:strokeWidth="2sp"/>

                        <ToggleButton
                            android:id="@+id/TOSToggler"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8sp"
                            android:layout_marginTop="60sp"
                            android:text="ToggleButton"
                            android:textOff="Text to Speech OFF"
                            android:textOn="Text to Speech ON" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <GridView
                    android:id="@+id/grids"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="125dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:horizontalSpacing="5dp"
                    android:numColumns="1"
                    android:paddingBottom="70sp"></GridView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>