<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#46463e"
    tools:context=".Authenticator.reset_Email">

  <ProgressBar
      android:id="@+id/emailprogresssbar"
      style="?android:attr/progressBarStyle"
      android:layout_width="255dp"
      android:layout_height="211dp"
      android:layout_marginTop="150dp"
      android:indeterminate="true"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:visibility="visible" />

  <LinearLayout
      android:id="@+id/linearLayout3"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">


    <ImageView
        android:id="@+id/backbutton"
        android:layout_width="72dp"
        android:layout_height="77dp"
        android:layout_marginEnd="336dp"
        android:layout_marginBottom="50dp"
        app:srcCompat="@drawable/darkmodeback" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reseting Password By Email"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:srcCompat="@drawable/mailicon" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextinputlayoutP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40sp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:focusableInTouchMode="true"
        android:hint="Enter your Email"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:endIconTint="@color/teal_700">

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/tokenid"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

      </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/emailcardview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#46463e"
        app:cardBackgroundColor="#46463e">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remember the password?"
            android:textAlignment="textEnd"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/redirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3sp"
            android:layout_weight="1"
            android:text="Login"
            android:textColor="#ffc53a" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/validatetoken"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:text="Send Token"
        android:textColor="@color/white"
        android:textColorHint="#EDEDED"
        android:textSize="20sp"
        app:iconTint="#E8E8E8"
        app:rippleColor="#00D7C3"
        app:strokeColor="#00D7C3"
        app:strokeWidth="2sp"
        tools:layout_editor_absoluteX="20dp" />

  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>